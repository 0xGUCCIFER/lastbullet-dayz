---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import { getLangFromUrl } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
  keywords?: string;
  noindex?: boolean;
}

const lang = getLangFromUrl(Astro.url);

const defaultDesc = lang === 'de'
  ? 'LAST BULLET DayZ - Der ultimative Hardcore PvP Server. Erlebe intensive Feuergefechte, einzigartige Mods und eine aktive Community auf Chernarus.'
  : 'LAST BULLET DayZ - The ultimate Hardcore PvP Server. Experience intense firefights, unique mods and an active community on Chernarus.';

const {
  title,
  description = defaultDesc,
  keywords = 'DayZ, Server, PvP, Hardcore, Last Bullet, Chernarus, DayZ Server, Gaming, Survival',
  noindex = false,
} = Astro.props;
const otherLang = lang === 'de' ? 'en' : 'de';
const currentPath = Astro.url.pathname.replace(`/${lang}`, '');
const canonicalURL = new URL(Astro.url.pathname, 'https://lastbullet-dayz.eu');
const ogImageURL = new URL('/images/og-image.webp', 'https://lastbullet-dayz.eu');

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'LAST BULLET DayZ',
  url: 'https://lastbullet-dayz.eu',
  description: 'LAST BULLET DayZ - Hardcore PvP Server',
  inLanguage: [lang],
  potentialAction: {
    '@type': 'SearchAction',
    target: `https://lastbullet-dayz.eu/${lang}/{search_term_string}`,
    'query-input': 'required name=search_term_string',
  },
};
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="LAST BULLET DayZ" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#e8791d" />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Canonical -->
    <link rel="canonical" href={canonicalURL.href} />

    <!-- OG Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:image" content={ogImageURL.href} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="LAST BULLET DayZ" />
    <meta property="og:locale" content={lang === 'de' ? 'de_DE' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'de' ? 'en_US' : 'de_DE'} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL.href} />

    <!-- hreflang -->
    <link rel="alternate" hreflang="de" href={`https://lastbullet-dayz.eu/de${currentPath}`} />
    <link rel="alternate" hreflang="en" href={`https://lastbullet-dayz.eu/en${currentPath}`} />
    <link rel="alternate" hreflang="x-default" href={`https://lastbullet-dayz.eu/de${currentPath}`} />

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Share+Tech+Mono&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>

    <!-- Prevent FOUC: set bg immediately -->
    <style is:inline>
      html { background-color: #0a0a0a; }
      body { opacity: 0; background-color: #0a0a0a; color: #f5f5f5; }
      body.ready { opacity: 1; transition: opacity 0.15s ease-in; }
    </style>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.add('ready');
      });
    </script>
  </head>
  <body class="min-h-screen bg-primary text-text-primary">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
