---
interface Props {
  variant?: 'red' | 'green' | 'blue' | 'gray';
  class?: string;
}

const { variant = 'red', class: className = '' } = Astro.props;

const variants = {
  red: 'bg-accent/10 text-accent border-accent/20',
  green: 'bg-accent-green/10 text-accent-green border-accent-green/20',
  blue: 'bg-accent-blue/10 text-accent-blue border-accent-blue/20',
  gray: 'bg-surface text-text-secondary border-border',
};
---

<span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium border ${variants[variant]} ${className}`}>
  <slot />
</span>
